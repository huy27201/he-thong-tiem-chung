<Window x:Class="GUI.MHChinhKH"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Hệ thống tiêm chủng" Height="600" Width="900"
        ResizeMode="NoResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="16"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock  
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
            Text="HỆ THỐNG TIÊM CHỦNG CHO KHÁCH HÀNG"
            TextAlignment="Center" 
            Foreground="#1C2ECE"
            VerticalAlignment="Center"/>
        <Button
            Margin="10"
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource MaterialDesignOutlinedDarkButton}"
            ToolTip="Đặt mua Vaccine"
            Content="Đặt mua Vaccine"
            Height="Auto"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
        <Button
            Margin="10"
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource MaterialDesignOutlinedDarkButton}"
            ToolTip="Xem danh sách lịch tiêm"
            Content="Xem danh sách lịch tiêm"
            Height="Auto"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
        <Button
            Margin="10"
            Grid.Row="1"
            Grid.Column="2"
            Style="{StaticResource MaterialDesignOutlinedDarkButton}"
            ToolTip="Đăng ký tiêm chủng"
            Content="Đăng ký tiêm chủng"
            Height="Auto"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
        <Button
            Margin="10"
            Grid.Row="2"
            Grid.Column="0"
            Style="{StaticResource MaterialDesignOutlinedDarkButton}"
            ToolTip="Xem tình trạng phiếu đăng ký"
            Content="Xem tình trạng phiếu đăng ký"
            Height="Auto"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
    </Grid>
</Window>
